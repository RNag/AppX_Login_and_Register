<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"


    tools:context="appx_homescreen.appx.RegisterActivity"
    android:id="@+id/RelLayout">

    <Spinner
        android:id="@+id/prefix_spinner"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginBottom="40dp"
        android:layout_alignLeft="@+id/editOccupation"
        android:textSize="17dp"
        android:height="60dp"
        android:layout_alignRight="@+id/a1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="-30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView7"
        android:height="750dp"
        android:width="3dp"
        android:background="#2a5188"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        android:id="@+id/textView4"

        android:width="5dp"
        android:background="#338bcd"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:height="750dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView3"
        android:height="750dp"
        android:width="2dp"
        android:background="#5ac2cd"
        android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView5"
        android:height="750dp"
        android:width="2dp"
        android:background="#5ac2cd"
        android:layout_alignParentTop="false"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView6"
        android:height="750dp"
        android:width="5dp"
        android:background="#338bcd"
        android:layout_marginRight="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView8"
        android:height="750dp"
        android:width="2dp"
        android:background="#2a5188"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView13"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editFirstName"
        android:width="90dp"
        android:hint="John"
        android:layout_alignTop="@+id/prefix_spinner"
        android:layout_toRightOf="@+id/prefix_spinner"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginRight="10dp"
        android:nextFocusDown="@+id/editLastName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editLastName"
        android:width="90dp"
        android:hint="Smith"
        android:layout_alignTop="@+id/editFirstName"
        android:layout_alignRight="@+id/edLevel_spinner"
        android:layout_alignEnd="@+id/edLevel_spinner"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:nextFocusDown="@+id/editAge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a0"
        android:textColor="#c31111"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginLeft="5dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last"
        android:id="@+id/textView14"
        android:textStyle="italic"
        android:layout_above="@+id/editFirstName"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView15"
        android:textStyle="bold"
        android:layout_above="@+id/a2"
        android:layout_alignLeft="@+id/a2"
        android:layout_alignStart="@+id/a2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editAge"
        android:width="60dp"
        android:layout_below="@+id/editLastName"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="45dp"
        android:hint=" 21"
        android:nextFocusDown="@+id/editOccupation"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editOrg"
        android:hint="VCU"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_toStartOf="@+id/textView17"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:nextFocusForward="@+id/edLevel_spinner"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:hint="password"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/register"
        android:layout_alignLeft="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:layout_above="@+id/editOccupation"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editOccupation"
        android:layout_alignTop="@+id/editAge"
        android:layout_alignLeft="@+id/editFirstName"
        android:layout_alignStart="@+id/editFirstName"
        android:hint="Student"
        android:layout_alignRight="@+id/editLastName"
        android:layout_alignEnd="@+id/editLastName"
        android:singleLine="true"
        android:nextFocusDown="@+id/editOrg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Occupation"
        android:id="@+id/textView17"
        android:textStyle="bold"
        android:layout_above="@+id/editOccupation"
        android:layout_alignLeft="@+id/editFirstName"
        android:layout_alignStart="@+id/editFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="University / Org."
        android:id="@+id/textView18"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editAge"
        android:layout_alignLeft="@+id/editAge"
        android:layout_alignStart="@+id/editAge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Education Level"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20" />

    <Spinner
        android:id="@+id/edLevel_spinner"
        android:layout_width="160dp"
        android:layout_height="30dp"

        android:background="@drawable/edittext_bg"
        android:layout_alignTop="@+id/editOrg"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:nextFocusDown="@+id/editEmail"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:hint="jsmith@vcu.edu"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/textView21"
        android:layout_alignLeft="@+id/editOrg"
        android:layout_alignStart="@+id/editOrg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail Address (required for login)"
        android:id="@+id/textView20"
        android:textStyle="bold"
        android:layout_above="@+id/editEmail"
        android:layout_alignLeft="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Desired Password"
        android:id="@+id/textView21"
        android:textStyle="bold"
        android:layout_above="@+id/editPassword"
        android:layout_alignLeft="@+id/editEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a2"
        android:textColor="#c31111"
        android:layout_above="@+id/editFirstName"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginLeft="5dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First"
        android:id="@+id/textView13"
        android:textStyle="italic"
        android:layout_above="@+id/editFirstName"
        android:layout_alignLeft="@+id/editFirstName"
        android:layout_alignStart="@+id/editFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a3"
        android:textColor="#c31111"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/editPassword"
        android:layout_toEndOf="@+id/editPassword"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a4"
        android:textColor="#c31111"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a5"
        android:textColor="#c31111"
        android:visibility="invisible"
        android:layout_above="@+id/editOrg"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a1"
        android:textColor="#c31111"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a6"
        android:textColor="#c31111"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create an Account"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please fill out the following information below. The asterisks (*) denote a required field."
        android:id="@+id/textView23"
        android:paddingStart="20dp"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:typeface="serif"
        android:textSize="17sp"
        android:textIsSelectable="true"
        android:layout_marginTop="20dp"
        android:paddingEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*"
        android:id="@+id/a7"
        android:textColor="#c31111"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignLeft="@+id/edLevel_spinner"
        android:layout_alignStart="@+id/edLevel_spinner"
        android:layout_marginTop="-5dp" />

    <TextView
        android:id="@+id/link_to_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click here to login with your account."
        android:textSize="16dip"
        android:textColor="#0b84aa"
        android:linksClickable="true"
        android:autoLink="web"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/register"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
</ScrollView>